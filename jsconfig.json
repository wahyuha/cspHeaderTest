{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@configs": ["src/configs"],
      "@configs/*": ["src/configs/*"],
      "@constants": ["src/constants"],
      "@constants/*": ["src/constants/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@helpers": ["src/helpers"],
      "@helpers/*": ["src/helpers/*"],
      "@middlewares": ["src/server/middlewares"],
      "@middlewares/*": ["src/server/middlewares/*"],
      "@routes": ["src/routes"],
      "@routes/*": ["src/routes/*"],
      "@server": ["src/server"],
      "@server/*": ["src/server/*"],
      "@stores": ["src/stores"],
      "@stores/*": ["src/stores/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"]
    }
  }
}
